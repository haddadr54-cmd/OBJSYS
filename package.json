{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "nodemon --watch server --ext js,mjs,cjs,ts server/index.js",
    "server:watch": "node --watch server/index.js",
    "web": "vite",
    "dev:full": "npm run dev",
    "dev:all": "concurrently -k -n server,web -c cyan,magenta \"npm:server\" \"npm:dev\"",
    "dev:all:host": "concurrently -k -n server,web -c cyan,magenta \"npm:server\" \"npm run dev:host\"",
    "health": "node scripts/health-check.cjs",
    "provision:audit": "node scripts/provision-audit.cjs",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "dev:node": "node scripts/dev-all.js",
    "start": "concurrently -k -n server,web -c cyan,magenta \"npm:server\" \"npm:dev\" && node scripts/health-check.cjs",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "deploy:discloud": "node scripts/deploy-discloud.js",
    "deploy:zip": "npm run deploy:discloud && powershell -Command \"if (Test-Path sistema-objetivo-discloud.zip) { Remove-Item sistema-objetivo-discloud.zip -Force }; Compress-Archive -Path 'deploy-discloud/*' -DestinationPath 'sistema-objetivo-discloud.zip' -Force\"",
    "deploy:full": "npm run deploy:zip && echo 'âœ… Deploy ZIP criado: sistema-objetivo-discloud.zip'",
    "deploy:api": "node scripts/deploy-discloud-api.js",
    "deploy:auto": "npm run deploy:zip && npm run deploy:api",
    "deploy:static:zip": "npm run build && powershell -ExecutionPolicy Bypass -File scripts/make-discloud-static-zip.ps1",
    "deploy:static:api": "node scripts/deploy-discloud-api.js sistema-objetivo-static.zip",
    "deploy:static": "npm run deploy:static:zip && npm run deploy:static:api"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "lucide-react": "^0.344.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^2.1.2",
    "whatsapp-web.js": "^1.34.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.35",
    "rollup": "^4.52.2",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^3.2.4"
  }
}
